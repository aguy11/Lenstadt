defFunc add ( x , y ) {
  answer = x + y;
  stampLn "The answer is: ";
  stampLn answer;
}
defFunc subtract ( x , y ) {
  answer = x - y;
  stampLn "The answer is: ";
  stampLn answer;
}
defFunc multiply ( x , y ) {
  answer = x * y;
  stampLn "The answer is: ";
  stampLn answer;
}
defFunc divide ( x , y ) {
  answer = x / y;
  stampLn "The answer is: ";
  stampLn answer;
}

& Main Code &
completeWhile True {
  completeWhile True {
    choice = captureStr "Select an option:\n a) Add\n b) Subtract\n c) Multiply\n d) Divide\n\n\nType q to quit.";
    completeIf choice == "a" or decision == "b" or decision == "c" or decision == "d" {
      quitLoop;
    }
    completeElse {
      stampLn "Invalid Choice " + choice;
    }
  }
  completeIf choice == "q" {
    quitLoop;
  }
  completeElse {
    num1 = captureFloat "First Number: ";
    num2 = captureFloat "Second Number: ";
    completeIf choice == "a" {
      add ( num1 , num2 );
    }
    completeElseIf choice == "b" {
      subtract ( num1 , num2 );
    }
    completeElseIf choice == "c" {
      multiply ( num1 , num2 );
    }
    completeElse {
      divide ( num1 , num2 );
    }

  }

}

stampLn "Thanks for checking out our function based calculator!!!";
